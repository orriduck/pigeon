{
  "manifest_version": 3,
  "name": "Pigeon - Job Networking Assistant",
  "version": "1.0",
  "description": "AI-powered networking assistant for LinkedIn",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_title": "Pigeon"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
